{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "conan build",
            "command": "conan.exe",
            "args": [
                "build",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}