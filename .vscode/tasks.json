{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-framework",
                "SOIL",
                "-framework",
                "OpenGL",
                "-framework",
                "GLUT",
                "src/car.cpp",
                "src/enemy.cpp",
                "src/entity.cpp",
                "src/glrgb.cpp",
                "src/hud.cpp",
                "src/main.cpp",
                "src/menu.cpp",
                "src/player.cpp",
                "src/point.cpp",
                "src/track.cpp",
                "-o",
                "racer",
                "--debug"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}